# -*- coding: utf-8 -*-
# vim: ft=jinja

{% import_yaml 'rng-tools/defaults.yaml' as defaults %}

{% set rngtools_lookup = salt['pillar.get']('rng-tools:lookup', {}).copy() %}

{% set os_family_map = salt['grains.filter_by']({
        'Arch': {},
        'RedHat': {},
        'Suse': {},
        'Debian': {},
        'Gentoo': {
            pkg: 'rng-tools',
            configfile: '/etc/conf.d/rngd',
            svc: rngd',
        },
  },
  grain="os_family",
  merge=rngtools_lookup)
%}

{% do defaults.rngtools.update(os_family_map) %}

{% set rngtools = salt['pillar.get'](
        'rng-tools',
        default=defaults.rngtools,
        merge=True
    )
%}
